<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Chat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/backToChatList"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="30dp"
            android:layout_height="30dp"/>



        <TextView
            android:id="@+id/friendName"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="123"
            android:textColor="#000" />
        <ImageButton
            android:id="@+id/more"
            android:src="@drawable/more"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <ListView
        android:divider="@color/colorAlpha"
        android:background="@color/ghostwhite"
        android:id="@+id/chatRecord"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_weight="1"
        android:smoothScrollbar="true">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/voiceMessage"
            android:src="@drawable/voice0"
            android:scaleType="fitCenter"
            android:background="@color/colorAlpha"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


        <EditText
            android:id="@+id/textMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000" />


        <ImageButton
            android:id="@+id/sendText"
            android:src="@drawable/send_text2"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>