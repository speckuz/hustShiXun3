<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/img_btn_back_to_chatList"
            android:src="@drawable/ic_back_to_chat_list"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="30dp"
            android:layout_height="30dp"/>



        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="123"
            android:textColor="#000" />
        <ImageButton
            android:id="@+id/img_btn_more"
            android:src="@drawable/more"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <ListView
        android:listSelector="@android:color/transparent"
        android:divider="@color/colorAlpha"
        android:background="@color/ghostwhite"
        android:id="@+id/tv_chat_record"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_weight="1"
        android:smoothScrollbar="true">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/img_btn_voice_message"
            android:src="@drawable/ic_chat_voice_show_false"
            android:scaleType="fitCenter"
            android:background="@color/colorAlpha"
            android:layout_width="40dp"
            android:layout_height="40dp"/>



        <EditText
            android:id="@+id/et_text_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:layout_weight="1"
            android:textColor="#000" />

        <ImageButton
            android:id="@+id/img_btn_show_others"
            android:src="@drawable/ic_chat_show_picture_false"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageButton
            android:id="@+id/img_btn_send_text"
            android:src="@drawable/ic_chat_send_text"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_show_voice"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.feiyueve.snsdemo.chat.CustomRecordImagineButton
            android:id="@+id/img_btn_sound_recording"
            android:layout_width="match_parent"
            android:src="@drawable/ic_chat_record_false"
            android:scaleType="fitCenter"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/colorAlpha"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_others"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageButton
            android:id="@+id/img_btn_picture"
            android:layout_width="100dp"
            android:src="@drawable/ic_chat_picture"
            android:scaleType="fitCenter"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:background="@color/colorAlpha"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"/>
        <ImageButton

            android:id="@+id/img_btn_location"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:src="@drawable/location"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:layout_height="80dp"

            android:background="@color/colorAlpha"/>
    </LinearLayout>
</LinearLayout>