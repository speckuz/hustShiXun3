<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:context=".checkinf.FriendInfActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_friend_inf_head"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sns" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_friend_inf_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1233"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#808080"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_friend_inf_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11111110"
                android:textColor="#808080"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_friend_inf_set_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="设置备注"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_friend_inf_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="生日:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_friend_inf_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="地区:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_friend_inf_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="性别:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_friend_inf_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="个性签名:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_friend_inf_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:paddingTop="12dp"
            android:text="兴趣:"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_friend_add_friend"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary_color"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:text="加好友"
            android:layout_marginBottom="30dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_friend_send_message"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary_color"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:text="发消息"
            android:layout_marginBottom="30dp"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_friend_moment"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary_color"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:text="查看Vini动态"
            android:layout_marginBottom="30dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_delete_friend"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary_color"
            android:textColor="@color/whitesmoke"
            android:gravity="center"
            android:text="删除好友"
            android:layout_marginBottom="30dp"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>