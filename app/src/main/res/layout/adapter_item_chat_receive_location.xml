<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/receiveHead"
        android:background="@drawable/sns"
        android:focusable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="65dp"
        android:layout_height="65dp"/>
    <FrameLayout
        android:id="@+id/fl_chat_location_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_chat_location"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/receiveHead">
        <ImageView
            android:background="@color/colorAlpha"

            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/ic_chat_location"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_chat_location_receive"
            android:layout_width="150dp"
            android:textColor="@color/black"
            android:text="森林公园"
            android:textSize="20dp"
            android:layout_height="150dp"/>
    </FrameLayout>


</RelativeLayout>