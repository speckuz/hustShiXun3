<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sendHead"
        android:background="@drawable/sns"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <FrameLayout
        android:id="@+id/ll_chat_voice_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_chat_message"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/sendHead">

        <ImageView
            android:background="@color/colorAlpha"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/ic_chat_voice_send"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_chat_voice_time_send"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:text="'6"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</RelativeLayout>