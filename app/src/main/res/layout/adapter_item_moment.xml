<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/border_horizontal"
    android:padding="15dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_friend_by_group_head"
                android:background="@drawable/sns"
                android:focusable="false"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="top">
                <TextView
                    android:id="@+id/userName"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="123"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_friend_by_group_head"
                    />
                <TextView
                    android:id="@+id/time"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:text="2020.09.09 12:30"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="今天真是开心的一天呢"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:background="@color/colorAlpha"
            android:id="@+id/iv_chat_receive_picture"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/test11"
            android:layout_width="250dp"
            android:layout_height="fill_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:gravity="end">
            <ImageButton
                android:visibility="gone"
                android:id="@+id/img_btn_delete_moment"
                android:src="@drawable/ic_group_owner_delete_member"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@color/colorAlpha"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/like"
                android:src="@drawable/ic_moment_like_false"
                android:scaleType="fitCenter"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:background="@color/colorAlpha"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/img_btn_comment_moment"
                android:src="@drawable/ic_comment"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@color/colorAlpha"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/ic_moment_like_true"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:background="@color/colorAlpha"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_moment_like_user_name"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:text="点赞的人"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.example.myapplication.moment.CustomCommentListView
            android:divider="@null"
            android:background="@color/whitesmoke"
            android:layout_weight="1"
            android:id="@+id/lv_comment_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>
</LinearLayout>